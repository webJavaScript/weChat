.fh-detail-video {
    font-size: 100rpx;
    width: 100vw;
    height: auto;
    /* padding-bottom: .3em; */
    background-color: #ffffff;
}

.fh-detail-video .video-play .fh-video-show {
    width: 100vw;
    /* height: 5em; */
    max-width: 100%;
    max-height: 100%;
    object-fit: cover;
}

.fh-detail-share-btn {
    font-size: 100px;
    padding: 0 .1em;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #ffffff;
}

.fh-detail-share-btn text {
    font-size: .14em;
    color: #999999;
    line-height: 0;
}

.fh-detail-share-btn .fh-video-playtimes {
    display: flex;
    justify-content: center;
    align-items: center;
}

.fh-detail-share-btn .fh-video-playtimes image {
    width: .14em;
    height: .14em;
    margin-right: .05em;
}

.fh-detail-share-btn .share-btn {
    width: 2.5em;
    height: 2.5em;
    border: none;
    background: none;
    line-height: 1;
    margin: 0;
    padding: 0;
}

.fh-detail-share-btn .share-btn image,
.fh-detail-share-btn .like-video image {
    width: 1em;
    height: 1em;
    display: block;
    margin: 0 auto;
}

.fh-detail-share-btn .share-btn text,
.fh-detail-share-btn .like-video text {
    font-size: .6em;
}

.fh-detail-share-btn .like-video {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 5.5em;
    height: 1.5em;
    border: none;
    background: none;
    padding: 0 .5em;
    margin-right: 0;
    position: static;
}

.fh-detail-share-btn .like-video text {
    font-size: .8em;
    color: #d81e06;
}

.fh-detail-intruduce {
    font-size: 100rpx;
    padding: 0 .2em;
    background-color: #ffffff;
}

.fh-detail-intruduce .video-title {
    font-size: .5em;
}

.fh-detail-intruduce .video-create-time {
    font-size: .3em;
    color: #999999;
}

.fh-detail-intruduce .video-doctor {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    margin-top: .2em;
    padding: .2em;
    background-color: #f7f7f7;
    border: 1rpx solid #eeeeee;
}

.fh-detail-intruduce .video-doctor .doctor-img {
    width: 1.5em;
    height: 1.5em;
    border-radius: 50%;
    overflow: hidden;
}

.fh-detail-intruduce .video-doctor .doctor-img image {
    max-width: 100%;
    height: 100%;
}

.fh-detail-intruduce .video-doctor .doctor-info {
    font-size: .5em;
    margin-left: .5em;
}

.fh-detail-intruduce .video-doctor .doctor-info .position {
    font-size: .6em;
    color: #999999;
    margin-left: 1em;
}

.fh-detail-intruduce .video-doctor .doctor-info .hospital,
.fh-detail-intruduce .video-doctor .doctor-info .disease {
    font-size: .6em;
    color: #999999;
}

.fh-detail-intruduce .video-doctor .doctor-info .disease {
    margin-left: 1em;
}

.fh-detail-intruduce .video-description {
    line-height: 1.75;
    font-size: .4em;
    color: #333333;
    margin: .4em 0;
}

.fh-pay-link {
    background-color: #ffffff;
    width: 94%;
    padding: 10px;
    height: 100%;
}

.fh-pay-link .pay-btn-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}

.fh-pay-link .pay-btn-list button {
    width: 30%;
    background-color: #ffffff;
    border: 1px solid orange;
    color: orange;
    margin-top: 10px;
}