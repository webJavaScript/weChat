.uc-iask-item {
    padding: 30rpx 30rpx 30rpx 30rpx;
    border-bottom: 1px solid #e1e1e1;
}
.uc-iask-title, .uc-iask-anw {
    display: flex;
    position: relative;
    margin-top: 10rpx;
}
.icon-uc-iask-q, .icon-uc-iask-a {
    position: relative;
    display: block;
    width: 42rpx;
    height: 50rpx;
    margin-right: 20rpx;
}
.uc-iask-title:after {
    content: '';
    position: absolute;
    left: 21rpx;
    top: 48rpx;
    width: 1rpx;
    height: 100%;
    overflow: hidden;
    background-color: #e1e1e1;
}
.icon-uc-iask-a {
    margin-top: 8rpx;
    background-color: #fff;
}
.icon-uc-iask-a:after {
    content: '';
    position: absolute;
    width: 15rpx;
    height: 15rpx;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    border: 3rpx solid #dddddd;
    border-radius: 50%;
}
.icon-uc-iask-q {
    background-image: url(data:image/png;base64,);
    background-repeat: no-repeat;
    background-size: 100%;
}
.uc-iask-title-txt, .uc-iask-anw-txt {
    flex: 1;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    line-height: 52rpx;
    font-size: 34rpx;
    margin-top: -8rpx;
}
.uc-iask-anw-txt {
    font-size: 28rpx;
}
.uc-iask-anw-uname {
    margin-right: -8rpx;
    color: #6595ff;
}
.uc-iask-info {
    display: flex;
    margin-left: 62rpx;
    margin-top: 28rpx;
    font-size: 24rpx;
    justify-content: space-between;
}
.uc-iask-time {
    color: #999;
}
.uc-iask-num {
    color: #45c25c;
}
.navigator-hover .icon-uc-iask-a {
    background-color: #e6e6e6;
}