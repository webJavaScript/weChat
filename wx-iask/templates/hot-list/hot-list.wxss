.hot-main {
    background: #fff;
}
.hot-list{
    border-bottom: 1rpx solid #e1e1e1;
    padding: 26rpx 30rpx 30rpx;
}
.hot-list-top{
    display: flex;
    margin-bottom: 33rpx;
}
.hot-list-imgwrap{
    width: 88rpx;
    height: 88rpx;
    position: relative;
    margin-right: 20rpx;
}
.hot-list-imgbox{
    width: 88rpx;
    height: 88rpx;
    border-radius: 50%;
    overflow: hidden;
    background-color: #fff;
}
.hot-list-imgbox image{
     width: 100%;
}
.icon-vip{
    width: 28rpx;
    height: 28rpx;
    position: absolute;
    bottom: 0;
    right: 3rpx;
    background: url(data:image/png;base64,) no-repeat;
    background-size: contain;

}
.hot-list-info{
    flex: 1;
}
.hot-lit-name{
    color: #333333;
    font-size: 34rpx;
}
.hot-li-top{
    line-height: 54rpx;
}
.hot-lit-time{
    color: #999999;
    font-size: 24rpx;
}
.hot-li-bottom{
    line-height: 34rpx;
    font-size: 24rpx;
    color: #999999;
}
.hot-li-bottom-hl{
    color: #6595ff;
}
.hot-list-middle{
    color: #666666;
    font-size: 28rpx;
    line-height: 40rpx;
    margin-bottom: 20rpx;
    max-height: 80rpx;
    overflow: hidden;
}
.hot-lb-left{
    color: #ff6362;
    font-size: 28rpx;
    line-height: 54rpx;
    padding: 0 25rpx;
    border-radius: 27rpx;
    border: 1rpx solid  #ff6362;
}
.hot-lb-right{
    line-height: 54rpx;
    color: #999999;
    font-size: 24rpx;
}
