.cm-select-wrap{
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 1;
    background: #ffffff;
}
.cm-select-bg{
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1;
    width: 100%;
    height: 100%;
    background: rgba(0,0, 0, 0.5);
}
.cm-select{
    display: flex;
    border-bottom: 1rpx solid #e1e1e1;
}
.cm-select-ls{
    flex: 1;
    height: 44rpx;
    text-align: center;
    position: relative;
    height: 88rpx;
    line-height: 88rpx;
}
.cm-select-ls:first-child:after{
    content: '';
    position: absolute;
    right: 0;
    top: 50%;
    height: 40rpx;
    width: 1rpx;
    margin-top: -20rpx;
    background-color: #e1e1e1;
}
.cm-sl-title{
    display: inline-block;
    font-size: 30rpx;
    color: #666666;
    line-height: 44rpx;
    vertical-align: middle;
    margin-right: 18rpx;
}
.cm-sl-arrow{
    width: 21rpx;
    height: 11rpx;
    background: url(data:image/png;base64,) no-repeat;
    background-size: contain;
    display: inline-block;
    vertical-align: middle;
}
.cm-select-son{
    width: 100%;
    background: #fff;
}
.cm-ss-ls{
    width: 100%;
    display: flex;
}
.cm-ssl-ul{
    flex: 1;
    height: 600rpx;
}
.cm-ssl-ul-first{
    background: #f8f8f8;
}
.cm-ssl-ls{
    border-top: 1rpx solid #e1e1e1;
    font-size: 32rpx;
    text-align: center;
    line-height: 100rpx;
    color: #333333;
}
.cm-ssl-ls-cur{
    background: #fff;
    color: #6595ff;
}
.cm-ssl-ls-cur{
    color: #6595ff;
}
.cm-ssl-ul .cm-ssl-ls:first-child{
    border-top: none;
}
.cm-select-ls-cur .cm-sl-title{
    color: #6595ff;
}
.cm-select-ls-cur .cm-sl-arrow{
    background-image: url(data:image/png;base64,);
}










