.doc-list-wrap{
    position: relative;
    background: #fff;
}
.doc-list{
    border-bottom: 1rpx solid #e1e1e1;
    padding: 26rpx 30rpx 30rpx;
    position: relative;
}
.doc-list-top{
    display: flex;
    padding-bottom: 58rpx;
}
.doc-list-imgwrap{
    width: 88rpx;
    height: 88rpx;
    position: relative;
    margin-right: 20rpx;
}
.doc-list-imgbox{
    width: 88rpx;
    height: 88rpx;
    border-radius: 50%;
    overflow: hidden;
}
.doc-list-imgbox image{
     width: 100%;
}
.icon-vip{
    width: 28rpx;
    height: 28rpx;
    position: absolute;
    bottom: 0;
    right: 3rpx;
    background: url(data:image/png;base64,) no-repeat;
    background-size: contain;

}
.doc-list-info{
    flex: 1;
}
.doc-lit-name{
    color: #333333;
    font-size: 34rpx;
}
.doc-li-top{
    line-height: 42rpx;
}
.doc-lit-time{
    color: #999999;
    font-size: 26rpx;
    padding-top: 10rpx;
    line-height: 30rpx;
    margin-left: 13rpx;
}
.doc-li-bottom{
    line-height: 50rpx;
    font-size: 26rpx;
    color: #666666;
}
.doc-lib-info{
    margin-right: 20rpx;
}
.doc-lib-tag{
    line-height: 26rpx;
    font-size: 20rpx;
    color: #fff;
    background: #ffa800;
    border-radius: 6rpx;
    padding: 0 9rpx;
    margin-top: 11rpx;
}
.doc-list-middle{
    color: #999999;
    font-size: 28rpx;
    line-height: 42rpx;
    margin-bottom: 16rpx;
    height: 40rpx;
    max-width: 580rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.doc-lb-left{
    color: #ff6362;
    font-size: 28rpx;
    line-height: 54rpx;
    padding: 0 25rpx;
    border-radius: 27rpx;
    border: 1rpx solid  #ff6362;
    overflow: hidden;
    background: #fff;
}
.doc-lb-left:active{
    background: pink;
}
.doc-lb-right{
    line-height: 54rpx;
    color: #999999;
    font-size: 24rpx;
}
 .doc-list-bottom{
    position: absolute;
    left: 138rpx;
    bottom: 30rpx;
    border-radius: 27rpx;
    overflow: hidden;
} 