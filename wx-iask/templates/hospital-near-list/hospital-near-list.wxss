.hos-ls{
    background: #ffffff;
    padding: 30rpx;
    border-bottom: 1rpx solid #e1e1e1;
}
.hos-lr-title{
    display: flex;
    margin-bottom: 10rpx;
    line-height: 46rpx;
    color: #333333;
    font-size: 34rpx;
    justify-content: space-between;
    align-items: baseline;
}

.hos-lr-title-txt {
    flex: 1;
}

.hos-lr-distance {
    font-size: 24rpx;
    color: #999999;
}

.hos-lr-tagwrap{
    margin-bottom: 14rpx;
}
.hos-lr-tag{
    display: inline-block;
    border: 1rpx solid #ffa800;
    border-radius: 6rpx;
    color: #ffa800;
    font-size: 24rpx;
    line-height: 34rpx;
    padding: 0 15rpx;
    margin-right: 10rpx;
}
.tag-orange{
    border: 1rpx solid #ffa800;
    color: #ffa800;
}
.tag-green{
    border: 1rpx solid #45c25c;
    color: #45c25c;
}
.tag-red{
    border: 1rpx solid #ff6362;
    color: #ff6362;
}
.hos-lr-address{
    display: flex;
    align-items: center;
}
.icon-hos-address{
    width: 20rpx;
    height: 26rpx;
    margin-right: 13rpx;
    background: url(data:image/png;base64,) no-repeat;
    background-size: contain;
}
.hos-lra-text{
    flex: 1;
    font-size: 26rpx;
    line-height: 1.2;
    height: 28rpx;
    overflow: hidden;
    color: #999999;
}












