@import "../../templates/uc-iask-list/uc-iask-list.wxss";

.doctor-info-box {
    position: relative;
    padding: 30rpx 0;
    background-color: #6595ff;
    background-size: cover;
    text-align: center;
}
.doctor-avatar-box {
    display: inline-block;
    text-align: center;
    background-image: linear-gradient(to top, rgba(101, 149, 255, 0.15), rgba(105, 217, 237, 0.15));
    border-radius: 50%;
    overflow: hidden;
    padding: 10rpx;
    font-size: 0;
}
.doctor-avatar-box:after {

}
.doctor-avatar {
    display: inline-block;
    overflow: hidden;
    border-radius: 50%;
    background-color: #fff;
}
.doctor-avatar image {
    width: 160rpx;
    height: 160rpx;
    background-color: #fff;
    vertical-align: top;
}
.doctor-fans {
    position: absolute;
    right: 30rpx;
    top: 30rpx;
    line-height: 54rpx;
    font-size: 28rpx;
    color: #fff;
    background-color: rgba(255, 255, 255, 0.1);
    border-radius: 26rpx;
    padding: 0 20rpx;
}
.doctor-btn-fork {
    position: relative;
    display: inline-block;
    /*border: 1rpx solid #fff;*/
    background-color: #27C249;
    min-width: 192rpx;
    border-radius: 10rpx;
    font-size: 28rpx;
    line-height: 60rpx;
    color: #fff;
    text-indent: 1.2em;
    border: 1rpx solid #27C249;
    transition: all 0.1s;
}
.doctor-btn-fork--cancel {
    background-color: transparent;
    border-color: #fff;
}
.doctor-btn-fork:after {
    content: '';
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    margin-left: -1.2em;
    width: 20rpx;
    height: 19rpx;
    background: url(data:image/png;base64,) center no-repeat;
    background-size: contain;
}

.doctor-btn-fork--cancel:after {
    width: 12rpx;
    height: 4rpx;
    margin-left: -2.2em;
    background-image: url(data:image/png;base64,);
}

.doctor-skill-items {
    background-color: #fff;
    padding: 30rpx 0 0 0;
}
.doctor-skill-items--expand {
    padding-bottom: 25rpx;
}
.doctor-skill-item {
    padding: 0 30rpx;
    margin-bottom: 30rpx;
}
.doctor-skill-item:last-of-type {
    margin-bottom: 0;
}
.doctor-skill-title {
    color: #6595ff;
    font-size: 34rpx;
    margin-bottom: 20rpx;
}
.doctor-skill-content {
    line-height: 46rpx;
    font-size: 30rpx;
    margin: -8rpx 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}
.doctor-skill-content--expand {
    display: block;
}

.doctor-expand-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 25rpx 0;
    background: #fff;
    font-size: 26rpx;
    color: #999;
    border-bottom: 1rpx solid #e1e1e1;
}
.doctor-expand-arrow {
    width: 21rpx;
    height: 11rpx;
    background: url(data:image/png;base64,) center no-repeat;
    background-size: 100%;
    margin-left: 10rpx;
}
.doctor-fixed {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    background: #fff;
}
.doctor-fixed-ph {
    height: 148rpx;
}
.doctor-iask-btn {
    margin: 30rpx;
    line-height: 88rpx;
    background-color: #6595ff;
    text-align: center;
    border-radius: 44rpx;
    text-align: center;
    color: #fff;
    font-size: 32rpx;
}