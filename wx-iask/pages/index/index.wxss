/*引入模块css文件*/
@import "../../templates/quick-link/quick-link.wxss";
@import "../../templates/hot-list/hot-list.wxss";


.swipe-wrap {
    background: #ffffff;
    overflow: hidden;
}
swiper {
    height: 300rpx;
}
swiper-item {
    height: 100%;
}
.slide-image {
    width: 100%;
    height: 100%;
}
.hot-wrap{
	background: #fff;
}
.hot-head{
    padding: 0 30rpx;
    line-height: 87rpx;
    border-bottom: 1rpx solid #e1e1e1;
}
.hot-head-title{
    font-size: 30rpx;
    color: #333;
}
.hot-head-more{
    margin-right: -30rpx;
    padding: 0 30rpx;
    font-size: 26rpx;
    color: #999999;
}

.icon-arrow-right{
    width: 11rpx;
    height: 20rpx;
    margin: 35rpx 0 0 15rpx;
    background: url(data:image/png;base64,) no-repeat;
    background-size: contain;
}

/* online-doctor.css
 * -----------------------------------------------------------------*/
.online-doctor-box {
    background: #fff;
    overflow: hidden;
}
.online-doctor-items {
    width: 100%;
    /*display: flex;*/
    padding: 30rpx 0;
    white-space:  nowrap;
}
.online-doctor-item {
    display: inline-block;
    margin-right: 10rpx;
}
.online-doctor-item:last-of-type {
    margin-right: 0;
}

.online-doctor-item-box {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 300rpx;
    box-sizing: border-box;
    padding: 30rpx;
    background-color: #fafafa;
}
.online-doctor-avatar {
    width: 88rpx;
    height: 88rpx;
    border-radius: 50%;
    overflow: hidden;
}
.online-doctor-avatar-src {
    width: 100%;
    height: 100%;
}
.online-doctor-info-box {
    /*text-align: right;*/
    width: 120rpx;
    text-align: right;
}
.online-doctor-name {
    line-height: 54rpx;
    font-size: 34rpx;
}
.online-doctor-dept {
    font-size: 24rpx;
    line-height: 34rpx;
    height: 34rpx;
    color: #999999;
    text-overflow: ellipsis;
    overflow: hidden;
}

