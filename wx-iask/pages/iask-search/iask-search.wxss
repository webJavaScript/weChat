page {
    background-color: #fff;
}
.search {
    margin-top: 30rpx;
    padding: 0 30rpx;
}
.search-header {
    display: flex;
    align-items: center;
}

.header-search {
    position: relative;
    flex: 1;
    border-radius: 32rpx;
    background-color: #eee;
    overflow: hidden;
    padding: 0 0 0 20rpx;
    height: 60rpx;
}

.header-search-field {
    display: block;
    width: 100%;
    height: 100%;
    padding: 0 50rpx;
    border: none;
    background-color: transparent;
    color: #333;
    font-size: 28rpx;
    -ms-box-sizing: border-box;
    -o-box-sizing: border-box;
    box-sizing: border-box
}


button[plain].header-btn-right, .header-btn-right {
    font-size: 30rpx;
    background: none;
    border: none;
    width: auto;
    padding-right: 0;
    padding-left: 30rpx;
}

.header-search-btn {
    position: absolute;
    line-height: 1;
    padding: 0;
    top: 50%;
    left: 30rpx;
    -webkit-transform: translateY(-50%);
    transform: translateY(-50%);
    font-size: 0;
}

.header-search-btn .icon-search {
    width: 28rpx;
    height: 28rpx;
}

.search-clear {
    position: absolute;
    right: 20rpx;
    top: 50%;
    width: 32rpx;
    height: 32rpx;
    font-size: 28rpx;
    line-height: 32rpx;
    text-align: center;
    color: #fff;
    background: #c2c2c2;
    overflow: hidden;
    z-index: 9999;
    transform: translateY(-50%);
    border-radius: 50%;
}

.search-clear:after {
    content: '';
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%) rotate(45deg);
    width: 20rpx;
    height: 19rpx;
    background: url(data:image/png;base64,) center no-repeat;
    background-size: contain;
}

