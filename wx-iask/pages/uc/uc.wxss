.view-uc-bg {
    display: flex;
    background-image: url(data:image/png;base64,);
    height: 300rpx;
    background-position: center top;
    background-repeat: no-repeat;
    background-size: 100% auto;
    align-items: center;
    justify-content: center;
    flex-direction: column;
}

.uc-avatar {
    width: 128rpx;
    height: 128rpx;
    border-radius: 50%;
    border: 10rpx solid rgba(255, 255, 255, 0.15);
    overflow: hidden;
}
.uc-avatar image {
    vertical-align: top;
    width: 100%;
    height: 100%;
    background-color: #fff;
}
.uc-avatar-name {
    font-size: 30rpx;
    color: #fff;
    margin-top: 10rpx;
}

.uc-link-items {
    margin-top: 20rpx;
    background: #fff;
    border-bottom: 1rpx solid #e1e1e1;
}
button.uc-link-item, .uc-link-item {
    position: relative;
    display: flex;
    align-items: center;
    width: 100%;
    padding: 0 30rpx;
    box-sizing: border-box;
    overflow: hidden;
    font-size: 34rpx;
    border-radius: 0;
}
button.uc-link-item {
    text-align: left;
    background-color: transparent;
}
button.button-hover.uc-link-item {
    background-color: rgba(0, 0, 0, 0.1);
    opacity: 0.7;
}
button.uc-link-item::after, .uc-link-item::after {
    content: '';
    position: absolute;
    left: 66rpx;
    bottom: 0;
    width: 100%;
    height: 1rpx;
    background-color: #e1e1e1;
}
button.uc-link-item::after {
    top: auto;
    transform: scale(1);
    border: none;
    border-radius: 0;
}
.uc-link-icon {
    width: 36rpx;
    height: 36rpx;
    margin-right: 30rpx;
}
.uc-link-icon image {
    width: 100%;
    height: 100%;
    vertical-align: top;
}
.uc-link-text {
    line-height: 100rpx;
    flex: 1;
}
.uc-link-items .uc-link-item:last-child:after {
    display: none;
}
.uc-link-arrow {
    width: 11rpx;
    height: 20rpx;
}
.uc-link-arrow image {
    width: 100%;
    height: 100%;
    vertical-align: top;
}

.uc-link-desc {
    font-size: 28rpx;
    color: #c2c2c2;
}
