.col-search {
    position: relative;
    width: 100%;
    height: 300rpx;
    overflow: hidden;
}

.col-search-img {
    width: 100%;
}

.col-search-main {
    position: absolute;
    top: 50%;
    left: 0;
    padding: 0 30rpx;
    width: 100%;
    box-sizing: border-box;
    transform: translateY(-50%);
}

.col-search-main .col-search-txt {
    padding-bottom: 30rpx;
    font-size: 28rpx;
    color: #333;
}

.col-search-txt-num {
    display: inline-block;
    font-style: normal;
    font-size: 36rpx;
    color: #ff6701;
}

.col-search-box {
    display: flex;
    align-items: center;
    width: 100%;
    height: 64rpx;
    border-radius: 40rpx;
    overflow: hidden;
}

.col-search-box .search-center-block {
    display: flex;
    height: 100%;
    align-items: center;
}

.col-search-box .search-enter {
    flex: 1;
    padding-left: 48rpx;
    height: 64rpx;
    font-size: 28rpx;
    color: #999;
    background: rgba(255, 255, 255, 0.5);
    border: #fff 1rpx solid;
    -webkit-border-radius: 40rpx 0 0 40rpx;
    border-radius: 40rpx 0 0 40rpx;
}

.col-search-box .search-enter .icon-search {
    width: 28rpx;
    height: 28rpx;
    margin-right: 10rpx;
}
.icon-search image {
    width: 100%;
    height: 100%;
}

.col-search-box .search-enter .search-input {
    display: block;
    padding: 0 15rpx;
    width: 100%;
    height: 64rpx;
    font-size: 28rpx;
    box-sizing: border-box;
    background: none;
    color: #999;
}

.col-search-box .search-enter .search-input::-webkit-input-placeholder {
    color: #999;
}

.col-search-box .search-link {
    width: 135rpx;
    height: 64rpx;
    font-size: 28rpx;
    line-height: 64rpx;
    text-align: center;
    color: #fff;
    padding: 0;
    background: #ff8a00;
    border: none;
    border-radius: 0 40rpx 40rpx 0;
}

.iask-link-items-box {
    border-top: 1rpx solid #e1e1e1;
    padding-bottom: 20rpx;
    overflow: hidden;
}
.iask-link-items {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    margin-right: -1rpx;
    background-color: #ffffff;
}
.iask-link-item {
    width: 25%;
    padding: 40rpx 0;
    border-right: 1rpx solid #e1e1e1;
    border-bottom: 1rpx solid #e1e1e1;
    box-sizing: border-box;
    text-align: center;
}
.iask-link-item-box {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
}
.iask-link-icon {
    width: 48rpx;
    height: 48rpx;
    margin-bottom: 20rpx;
}
.iask-link-icon image {
    width: 100%;
    height: 100%;
}
.iask-link-item-text {
    font-size: 28rpx;
}
.iask-link-item-null .iask-link-item-box {
    visibility: hidden;
}