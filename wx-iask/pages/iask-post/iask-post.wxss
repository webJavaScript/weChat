.iask-post-tips {
    line-height: 88rpx;
    font-size: 28rpx;
    color: #ffa800;
    background-color: rgba(255, 168, 0, 0.1);
    text-align: center;
}
.iask-post-fields {
    font-size: 30rpx;
    background-color: #fff;
    overflow: hidden;
}
.iask-post-field {
    padding: 30rpx;
    border-bottom: 1rpx solid #e1e1e1;
}
.iask-post-field-label {
    /*line-height: 1;*/
}
.iask-post-field-flex {
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.iask-post-radio-group .radio {
    margin-left: 20rpx;
}
.iask-post-radio-group .radio radio {
    /*zoom: 0.6;*/
    /*vertical-align: top;*/
}
.iask-post-field--picker {
    color: #999999;
    display: inline-block;
    vertical-align: middle;
}
.iask-post-field-picker {
    flex: 1;
    text-align: right;
}
.iask-post-field textarea {
    width: 100%;
    height: 250rpx;
}
.iask-post-field-arrow {
    width: 11rpx;
    height: 20rpx;
    margin-left: 20rpx;
    vertical-align: middle;
}
.iask-post-field--upload .iask-post-field-input {
    flex: 1;
    margin-left: 30rpx;
    text-align: left;
    color: #666;
}

.iask-post-upload {
    position: relative;
    box-sizing: border-box;
    width: 100%;
    height: 100%;
    padding: 50%;
}

.icon-iask-post-upload {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    display: inline-block;
    width: 80rpx;
    height: 65rpx;
    background: url(data:image/png;base64,) center no-repeat;
    background-size: 100%;
}

button.iask-post-btn {
    border: none;
    background-image: linear-gradient(to right, #6595ff, #69d9ed);
    color: #fff;
    border-radius: 44rpx;
    line-height: 88rpx;
    font-size: 30rpx;
}

button.iask-post-btn[disabled] {
    background: #ddd;
}


.iask-post-doctor {
    display: flex;
    align-items: center;
}
.iask-post-doctor-avatar {
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
    overflow: hidden;
}
.iask-post-doctor-tag {
    display: inline-block;
    line-height: 36rpx;
    color: #ff6362;
    border: 1rpx solid #ff6362;
    border-radius: 4rpx;
    padding: 0 10rpx;
}
.iask-post-images {
    width: 100%;
    overflow: hidden;
    margin-top: -20rpx;
}
.iask-post-image {
    float: left;
    margin-top: 20rpx;
    max-width: 25%;
    width: 25%;
}
.iask-post-image-box {
    position: relative;
    margin-right: 20rpx;
    height: 100%;
    background-color: #e1e1e1;
}
.iask-post-image-box image {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    /*height: 100rpx;*/
    height: 100%;
    vertical-align: top;
}
.iask-post-image:last-of-type .iask-post-image-box {
    background-color: transparent;
}

.iask-post-field--upload {
    position: relative;
    margin-right: -20rpx;
}
.iask-post-field--upload .iask-post-field-input {
    position: absolute;
    left: 25%;
    top: 50%;
    transform: translateY(-50%);
}
.iask-post-upload-box{
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    border: 1rpx solid #e1e1e1;
    box-sizing: border-box;
}
.iask-post-btn--del {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    width: 60rpx;
    height: 60rpx;
    background: rgba(0, 0, 0, .5) url(data:image/png;base64,) center no-repeat;
    border-radius: 50%;
    background-size: 32rpx;
}