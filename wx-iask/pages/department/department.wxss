@import "../../templates/uc-iask-list/uc-iask-list.wxss";
.department-select-wrap {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 2;
    background: #fff;
}

.department-select-title {
    border-bottom: 1rpx solid #e1e1e1;
    text-align: center;
    height: 88rpx;
}

.department-st-word {
    display: inline-block;
    font-size: 30rpx;
    color: #666666;
    line-height: 88rpx;
    height: 88rpx;
    vertical-align: middle;
}

.department-st-arrow {
    display: inline-block;
    width: 21rpx;
    height: 11rpx;
    margin-left: 11rpx;
    vertical-align: middle;
    background: url(data:image/png;base64,) no-repeat;
    background-size: contain;
    display: inline-block;
    vertical-align: middle;
}

.department-select-title-cur .department-st-word {
    color: #6595ff;
}

.department-select-title-cur .department-st-arrow {
    background: url(data:image/png;base64,) no-repeat;
    background-size: contain;
}

.department-select-main {
    width: 100%;
    height: 600rpx;
    background: #fff;
}

.department-select-ls {
    border-top: 1rpx solid #e1e1e1;
    font-size: 32rpx;
    text-align: center;
    line-height: 100rpx;
    color: #333333;
}

.department-select-ls:first-child {
    border-top: none;
}

.department-select-ls-cur {
    color: #6595ff;
}

.department-select-child-wrap {
    padding: 120rpx 30rpx 30rpx;
    background: #f7f7f7;
}

.department-select-child-ul {
    margin-right: -15rpx;
    margin-bottom: -15rpx;
}

.department-select-child-ls {
    position: relative;
    width: 220rpx;
    box-sizing: border-box;
    height: 60rpx;
    margin-right: 15rpx;
    margin-bottom: 15rpx;
    text-align: center;
    color: #333333;
    font-size: 28rpx;
    line-height: 56rpx;
    border-radius: 8rpx;
    border: 2rpx solid #dddddd;
    background: #fff;
}

.department-select-child-ls-cur {
    border-color: #45c25c;
}

.department-select-child-ls-cur::before {
    content: '';
    display: block;
    width: 28rpx;
    height: 28rpx;
    position: absolute;
    bottom: 0;
    right: 0;
    background: url(data:image/png;base64,) no-repeat;
    background-size: contain;
}

.department-list {
    background: #fff;
}

.department-bg{
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
}