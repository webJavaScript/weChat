.fh-video-list {
    font-size: 100rpx;
    padding: 0 .2em;
}
.fh-video {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    margin-top: .2em;
    padding-bottom: .2em;
    border-bottom: 1rpx dotted #878787;
}
.fh-video .video-img {
    position: relative;
    margin-right: .1em;
    width: 35%;
    min-width: 2.3em;
    height: 1.6em;
    overflow: hidden;
    background: #f2f2f2;
}
.fh-video .video-img .video-play-btn {
    position: absolute;
    left: 50%;
    top: 50%;
    width: .6em;
    height: .6em;
    margin-left: -0.3em;
    margin-top: -0.3em;
    /* background-color: rgba(255, 255, 255, .5); */
    border-radius: 50%;
    overflow: hidden;
}
.fh-video .video-img .video-play-btn image {
    display: block;
    width: 100%;
    height: 100%;
}

.fh-video .video-img .video-pic,
.fh-video .video-img .video-image {
    width: 100%;
    height: 100%;
}
.fh-video .video-img .video-time {
    position: absolute;
    bottom: 10rpx;
    right: 10rpx;
    padding: .1em .3em;
    background-color: rgba(0, 0, 0, .5);
    border-radius: 6rpx;
    color: #ffffff;
    font-size: .2em;
}
.fh-video .video-info {
    width: 63%;
    max-width: 15em;
    font-size: .35em;
}
.fh-video .video-info image {
    width: .8em;
    height: 1em;
}
.fh-video .video-info .title text {
    display: inline-block;
    width: 100%;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}
.fh-video .video-info .doctor-info {
    margin: .5em 0;
}
.fh-video .video-info .name {
    margin: 0 .5em;
    color: #666;
}
.fh-video .video-info .position {
    padding: .1em .3em;
    border-radius: 6rpx;
    font-size: .7em;
    border: 1rpx solid #eec7c7;
    color: #ff6362;
}
.fh-video .video-info .create-info {
    font-size: .9em;
    color: #999999;
}
.fh-video .video-info .create-info .ctime {
    margin-right: .5em;
}